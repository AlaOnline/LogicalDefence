<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/colorPrimary">

    <TextView
        android:id="@+id/fallacy_title"
        android:layout_width="match_parent"
        android:layout_height="@dimen/item_height"
        android:gravity="center_vertical"
        android:textColor="@android:color/white"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:paddingLeft="@dimen/nav_drawer_item_padding"
        android:paddingRight="@dimen/nav_drawer_item_padding" />


    <TextView
        android:id="@+id/fallacy_desc"
        android:layout_below="@+id/fallacy_title"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textColor="@color/black_90"
        android:textAppearance="?android:attr/textAppearanceSmall"
        android:paddingLeft="@dimen/nav_drawer_item_padding"
        android:paddingRight="@dimen/nav_drawer_item_padding"
        android:paddingTop="@dimen/item_margin"
        android:paddingBottom="@dimen/item_margin"
        android:background="@android:color/white" />


    <TextView
        android:id="@+id/fallacy_example"
        android:layout_width="match_parent"
        android:layout_below="@+id/fallacy_desc"
        android:layout_height="wrap_content"
        android:textColor="@color/black_70"
        android:paddingRight="@dimen/nav_drawer_item_padding"
        android:textAppearance="?android:attr/textAppearanceSmall"
        android:textStyle="italic"
        android:paddingLeft="@dimen/nav_drawer_item_padding"
        android:background="@android:color/white"
        android:paddingBottom="@dimen/item_margin" />


</RelativeLayout>